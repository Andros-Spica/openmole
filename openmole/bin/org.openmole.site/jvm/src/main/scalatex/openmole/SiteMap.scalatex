
@import org.openmole.site.tools._
@import org.openmole.site._
@import DocumentationPages._

@h1{Site Map}

@p
  Welcome to the OpenMOLE site map.
  It's more a list than a map actually but hey, layout propositions for the various pages are welcome!

  @h2{@a("Documentation", href := documentationHead.file, style := "color:#a6bf26")}

  @ol(style := "list-style-type: upper-roman")
    @li
      @a("Language", href := language.file)
      @ol
        @sitemap.siteMapSection(languagePages.diff(developersPages))
        @li
          @a("Developers", href := developers.file)
          @ol(style := "list-style-type: lower-alpha")
            @sitemap.siteMapSection(developersPages)
    @li
      @a("Run", href := run.file)
      @ol
        @sitemap.siteMapSection(runPages)
    @li
      @a("Explore", href := explore.file)
      @ol
        @sitemap.siteMapSection(explorePages)
    @li
      @a("Scale", href := scale.file)
      @ol
        @sitemap.siteMapSection(scalePages)
    @li
      @a("Advanced Concepts", href := advancedConcepts.file)
      @ol
        @sitemap.siteMapSection(advancedPages.diff(gaPages))
        @li
          @a("Genetic Algorithms", href := geneticAlgorithm.file)
          @ol(style := "list-style-type: lower-alpha")
            @sitemap.siteMapSection(gaPages)

  @h2{@a("Tutorials", href := tutorials.file, style := "color:#a6bf26")}

  @ol(style := "list-style-type: upper-roman")
    @li
      @a("Getting Started Tutorials", href := stepByStepIntro.file)
      @ol
        @sitemap.siteMapSection(gettingStartedPages)
    @li
      @a("NetLogo Tutorials", href := netLogo.file)
      @ol
        @sitemap.siteMapSection(netLogoPages)

  @h2{@a("Community", href := OMcommunity.file, style := "color:#a6bf26")}

  @ol(style := "list-style-type: upper-roman")
    @sitemap.siteMapSection(communityPages)

  @h2{@a("Download", href := install.file, style := "color:#a6bf26"                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             )}

  @ol(style := "list-style-type: upper-roman")
    @sitemap.siteMapSection(downloadPages)
